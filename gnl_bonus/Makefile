NAME	:= get_next_line_bonus 
CC		:= cc
FLAGS	:= -c -Wall -Wextra -Werror

# ============================================================================
# COLORS
# ============================================================================

RESET	:= \033[0m
GRAY	:= \033[0;90m
RED		:= \033[0;91m
GREEN	:= \033[0;92m
YELLOW	:= \033[0;93m
BLUE	:= \033[0;94m
MAGENTA	:= \033[0;95m
CYAN	:= \033[0;96m
WHITE	:= \033[0;97m

# ============================================================================
# COMMANDS
# ============================================================================

AR		:= @/bin/ar rcs
ECHO	:= @echo
MKDIR	:= @/bin/mkdir
RM		:= @/bin/rm -rf

# ============================================================================
# INCLUDES
# ============================================================================

INC		:= -I .

# ============================================================================
# SOURCES
# ============================================================================

SRCS	:= get_next_line_bonus.c get_next_line_utils_bonus.c \
			get_next_line_test_bonus.c

# ============================================================================
# OBJECTS
# ============================================================================

OBJS	:= $(SRCS:.c=.o)

# ============================================================================
# RULES
# ============================================================================

all:	 	$(NAME)

$(NAME):	$(OBJS)
			$(CC) $(OBJS) -o $(NAME)
			$(ECHO) "$(GREEN)Program is ready :)$(RESET)"

%.o:		%.c
			$(ECHO) "$(YELLOW)Now compiling: $< $(RESET)"
			$(CC) $(FLAGS) $(INC) $< -o $@
			$(ECHO) "$(GREEN)$< created $(RESET)"

clean:
			$(RM) $(OBJS) 
			$(ECHO) "$(RED)Objects removed!$(RESET)"

fclean: 	clean
			$(RM) $(NAME)
			$(ECHO) "$(RED)Program removed!$(RESET)"

re: 		fclean all
			$(ECHO) "$(BLUE)Cleaned and rebuilt everything :)$(RESET)"

.PHONY: all, clean, fclean, re
